unit UntController.BFCall.Clientes;

interface

uses
  System.SysUtils,
  Vcl.Dialogs,
  Uni,
  UntFuncoes,
  UntDmConexao,
  System.Generics.Collections,
  System.JSON,
  DataSet.Serialize,
  Horse,
  UntController.Authorization;

  procedure registrar;

implementation

function SelectAll: TJSONArray;
var
   vSQL, fLinha : String;
   vQry : TUniQuery;
   f : TextFile;
begin
  AssignFile(f, Sistema.Path_SQL+'BfCall\Clientes\Clientes.sql');
  Reset(f);
  vSQL := '';
  While not Eof(f) do
  begin
    Readln(f, fLinha);
    vSQL := vSQL + fLinha;
  end;
  CloseFile(f);
  vQry := TUniQuery.Create(nil);
  vQry.Close;
  vQry.Connection := DmConexao.DbConexao;
  vQry.SQL.Add(StringReplace(vSQL, 'ï»¿﻿','',[]));
  vQry.Open;
  Result := vQry.ToJSONArray;
end;

procedure GetAll(Req: THorseRequest; Res: THorseResponse; Next: TProc);
begin
  Res.Send<TJSONAncestor>(SelectAll);
end;

procedure registrar;
begin
  THorse.Get( '/bfcall/clientes', Authorization(), GetAll);
end;

end.
