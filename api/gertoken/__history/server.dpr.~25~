program server;

{$APPTYPE CONSOLE}
{$R *.res}

uses
  Horse,
  Horse.Jhonson,
  System.JSON,
  JOSE.core.JWT,
  JOSE.core.Builder,
  System.SysUtils,
  Vcl.Dialogs,
  UntDados in 'Model\UntDados.pas' {DmDados: TDataModule};

begin
  THorse.Use(Jhonson());

  THorse.POST('/token',
    procedure(Req: THorseRequest; Res: THorseResponse; Next: TProc)
    var
      LToken: TJWT;
      LCompactToken: string;
      User : TJSONObject;
    begin
      User := Req.Body<TJSONObject>;


      LToken := TJWT.Create;
      try
        // Padrão da ferramenta
        LToken.Claims.Issuer := 'Gerencial Sistemas';
        LToken.Claims.Subject := 'Token';
        LToken.Claims.Expiration := Now + 1;

        // Minhas informações... exemplo
        //LToken.Claims.SetClaimOfType<String>('inf', 'inf');

        // criando o token
        LCompactToken := TJOSE.SHA256CompactToken('key', LToken);
        Res.Send(LCompactToken);
      finally
        LToken.Free;
      end;
      end);

  THorse.Listen(9099);
end.
