program server;

{$APPTYPE CONSOLE}
{$R *.res}

uses
  Vcl.Forms,
  Horse,
  Horse.Jhonson,
  System.JSON,
  JOSE.core.JWT,
  JOSE.core.Builder,
  System.SysUtils,
  Vcl.Dialogs,
  UntDados in 'Model\UntDados.pas' {DmDados: TDataModule};

begin
  Application.CreateForm(TDmDados, DmDados);
  THorse.Use(Jhonson());

  THorse.POST('/gertoken',
    procedure(Req: THorseRequest; Res: THorseResponse; Next: TProc)
    var
      LToken: TJWT;
      LCompactToken: string;
      User : TJSONObject;
    begin
      User := Req.Body<TJSONObject>;
      if DmDados.ConsultaLogin(User) then
      begin
        LToken := TJWT.Create;
        try
          // Padrão da ferramenta
          LToken.Claims.Issuer := 'Gerencial Sistemas';
          LToken.Claims.Subject := 'Token';
          LToken.Claims.Expiration := Now + 1;

          // Minhas informações... exemplo
          //LToken.Claims.SetClaimOfType<String>('inf', 'inf');

          // criando o token
          LCompactToken := TJOSE.SHA256CompactToken('key', LToken);
          Res.Send(LCompactToken);
        finally
          LToken.Free;
        end;
      end else
      begin
        Res.Send('Não foi possível concluir a solicitação, verifique os dados enviados!').Status(401);
      end;
      end);

  THorse.Listen(9099);
end.
