program server;

{$APPTYPE CONSOLE}

{$R *.res}

uses Horse,
     Horse.Jhonson,
     System.JSON,
     JOSE.core.JWT,
     JOSE.core.Builder;

begin
  THorse.Use(Jhonson());

  THorse.POST('/token',
    procedure(Req: THorseRequest; Res: THorseResponse; Next: TProc)
    var
      LBody: TJSONArray;
    begin
      LBody := TJSONArray.Create;
      LBody.Add('{nome:SANTIAGO}');
      Res.Send<TJSONArray>(LBody);
    end);

  THorse.Listen(9000);
end.
