unit UntModel.Claims;

interface

uses
  JOSE.Core.JWT,
  JOSE.Types.JSON;

type
  TClaims = class(TJWTClaims)
    strict private
      function GetUsuario: string;
      procedure SetUsuario(const Value: string);
    public
      property Usuario : string read GetUsuario write SetUsuario;
  end;

implementation

{ TClaims }

function TClaims.GetUsuario: string;
begin
  Result := TJSONUtils.GetJSONValue('usuario', FJSON).AsString;
end;

procedure TClaims.SetUsuario(const Value: string);
begin
  TJSONUtils.SetJSONValueFrom<string>('usuario', Value, FJSON);
end;

end.
